// this is the best possible way to get the maximum array sum.
// it uses the kadane's algo

#include <iostream>
#include <limits.h>
using namespace std;
int main() {
    int N;
    cin >> N;

    int* arr = new int[N];

    for(int i=0;i<N;i++)
    {
        cin >> arr[i];
    }

    int cs=0;
    int ms=0;
    for(int i=0;i<N;i++)
    {
        cs += arr[i];
        if(cs<0)
            cs = 0;
        
        //if(cs > ms)
        //    ms = cs;
        ms = max(ms,cs);
    }

    cout << ms;

    return 0;
}
